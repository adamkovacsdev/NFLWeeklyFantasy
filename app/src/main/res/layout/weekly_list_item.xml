<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="100dp"
    android:padding="10dp">


    <ImageView
        android:id="@+id/iv_weekly_hometeam"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/tv_weekly_hometeam_nameshort"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text=""
        android:paddingTop="15dp"
        android:paddingLeft="15dp"
        />
    <TextView
        android:id="@+id/tv_weekly_hometeam_score"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingLeft="15dp"/>

    <RadioGroup
        android:id="@+id/rg_selector"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home_team_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingLeft="10dp"/>

        <RadioButton
            android:id="@+id/rb_away_team_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:paddingLeft="10dp"/>
    </RadioGroup>
    <TextView
        android:id="@+id/tv_weekly_awayteam_score"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingRight="15dp"/>
    <TextView
        android:id="@+id/tv_weekly_awayteam_nameshort"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingRight="15dp" />

    <ImageView
        android:id="@+id/iv_weekly_awayteam"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content" />

</LinearLayout>